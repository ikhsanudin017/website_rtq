# Database Configuration
# Local PostgreSQL (development)
# DATABASE_URL="postgresql://username:password@localhost:5432/rtq_database?schema=public"

# Neon PostgreSQL (production/staging)
# Get connection string from your Neon dashboard: https://neon.tech
DATABASE_URL="postgres://username:password@your-endpoint.neon.tech/database?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# App Configuration
APP_NAME="RTQ Ibnu Mas'ud"
APP_URL=http://localhost:3000

# Optional Features (can be left empty for basic deployment)
# WhatsApp API (untuk notifikasi)
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# Email Configuration (optional)
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=587
EMAIL_FROM=

# Production Environment Variables (for Vercel)
